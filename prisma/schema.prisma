generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  capacity    String
  category    String
  description String
  features    String[]
  applications String[]
  images      String[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}




model Contact {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  email       String
  company     String?
  phone       String?
  inquiryType String
  message     String
  createdAt   DateTime @default(now())
}